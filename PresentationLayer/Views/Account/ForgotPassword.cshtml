@using PresentationLayer.Models
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Parola Sıfırlama";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
} 
<!--begin::Authentication - Sign-in -->
    <!--begin::Aside-->
    <!--begin::Body-->
<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <!--begin::Card-->
        <div class="card rounded-3 w-md-350px">
            <!--begin::Card body-->
            <div class="card-body d-flex flex-column p-10 p-lg-20 pb-lg-10">
                <!--begin::Wrapper-->
                <div class="d-flex flex-center flex-column-fluid pb-15 pb-lg-20">

                    <!--begin::Form-->
                    <form class="form" method="post">
                    <!--begin::Input group--->
                        <div class="fv-row mb-8">
                            <!--begin::Email-->
                            <div class="text-gray-500 text-center fw-semibold fs-6">
                                E-posta adresinizi girin. Parola sıfırlama yönergeleri e-postanıza gönderilecektir.
                            </div>
                            <input type="email" placeholder="Email" name="Email" autocomplete="off" class="form-control bg-transparent" />
                            <!--end::Email-->
                        </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <!--begin::Submit button-->
                        <div class="d-grid mb-50">
                            <button type="submit" class="btn btn-primary">

                                <!--begin::Indicator label-->
                                <span class="indicator-label">
                                    Parolamı Sıfırla
                                </span>
                                <!--end::Indicator label-->
                            </button>
                        </div>
                        <!--end::Submit button-->
                    </form>
                    <!--end::Form-->

                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Body-->
</div>
<!--end::Authentication - Sign-in-->	</div>
<!--end::Root-->
<!--end::Main-->

